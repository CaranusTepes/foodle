<!DOCTYPE html>
<html>
  <head>
    <title>Foodle</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header" > 
      <div class="logo"> Foodle </div>
      <div class="navigation">
        <div><%= link_to 'Home', root_path %></div>
        <div><%= link_to 'About', about_path %></div>
        <div><%= link_to 'Recipes', categories_path %></div>
        <div><%= link_to 'Download', download_path %></div>
        <div><%= link_to 'Contact', contact_path %></div>
      </div>
      <div class="back"><%= link_to "Back", :back %></div>
    </div>
    <%= yield %>
  </body>
</html>
